# MongoDB Atlas
# IMPORTANT: Use your own MongoDB Atlas connection string
# Never commit the real credentials to git!
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/novum?retryWrites=true&w=majority

# Server
PORT=5000
NODE_ENV=development

# CORS
CLIENT_URL=http://localhost:5173

# JWT
# IMPORTANT: Generate a strong random secret with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# NEVER use the default value in production!
JWT_SECRET=generate-a-strong-random-secret-here-use-crypto-randomBytes
JWT_EXPIRE=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Email Configuration (optional - if not configured, emails won't be sent)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
